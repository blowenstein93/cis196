<div class="content">
	<h1>Welcome to Brad's App</h1>

	<p>Sign up or view some videos by following the links below:</p>


	<ul>
		<li> <%= link_to "Make a new user", new_user_registration_path, class:"body_link" %> </li>
		<li> <%= link_to "List all users", users_index_path, class:"body_link" %> </li>

		<% if user_signed_in? %>
		<li> <%= link_to "Post a new video", new_video_path, class:"body_link" %> </li>
		<% end %>
		<li> <%= link_to "List all videos", videos_path, class:"body_link" %> </li>
</div>

<h2>Videos:</h2>

<table>
	<% @videos.each do |video| %>
	<tr>
		<td><h4><%= link_to video.name, video_path(video.id), class: "video_link" %> </h4>
		<%= video_tag video.file, :controls => true %></td>
		<td>Posted by <%= link_to video.user.account_name, users_show_path(video.user.id) %></td>
		<% if video.user == current_user %>
			<td><%= button_to "delete video", video, confirm: "Are you sure you want to delete this video?", method: :delete %></td>
			<td><%= button_to "edit video", edit_video_path(video) %></td>
		<% end %>
	</tr>
	<% end %>
</table>