<%=form_for @video do|f| %>

  	<div > 
    	<% if @video.errors.any? %>
      		<ul>
        		<% @video.errors.full_messages.each do |msg| %>
          		<li class="error_msg"><%= msg %></li>
        		<% end %>
      		</ul>
      	<% end %>
  	</div>

  	<div class="field">
  		<p>Upload Your Video</p>
  		<div>
	  		<%= f.uploadcare_field :file %>
		</div>
	</div>

	<div class="field">
		<%= f.hidden_field :user_id, :value => current_user.id %>
	</div>
	
	<div class="field">
		<p>Video Name</p>
		<%= f.text_field :name %>
	</div>

	<div class="actions">
		<%=f.submit%>
	</div>
<% end %>