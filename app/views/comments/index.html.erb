<h1>Comments#index</h1>
<p>Find me in app/views/comments/index.html.erb</p>

<table>
	<tr>
		<td>user</td>
		<td>comment</td>
		<td>video</td>
	</tr>
	<% @comment.each do |comment|%>
	<tr>
		<td><%= comment.user.account_name unless comment.user.nil? %></td>
		<td><%= comment.comment %></td>
		<td><%= comment.video.name unless comment.video.nil?  %></td>
	</tr>
	<% end %>
</table>